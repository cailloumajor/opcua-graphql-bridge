{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "regexManagers": [
    {
      "fileMatch": [
        "^poetry_install_vars.sh$"
      ],
      "matchStrings": [
        "POETRY_VERSION=(?<currentValue>[^# \\n]+)"
      ],
      "datasourceTemplate": "github-releases",
      "depNameTemplate": "python-poetry/poetry"
    }
  ]
}
